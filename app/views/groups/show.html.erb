<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Ditail</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバーリスト</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= link_to group_path(@group) do %>
                <%= image_tag @group.get_profile_image, size:'50x50' %>
                <% end %>
              </td>
              <td><%= link_to @group.name,group_path(@group) %></td>
              <td><%= @group.introduction %></td>
              <td>
                <% @group.group_users.each do |user| %>
                  <%= user.user.name %><br>
                <% end %>
              </td>
              <% if @group.owner_id != current_user.id %>
                <% if @group.joined_by?(current_user) %>
                  <td><%= link_to 'leave this group', group_group_user_path(@group), method: :delete, class: "btn btn-sm btn-danger" %></td>
                <% else %>
                  <td><%= link_to 'Join this group', group_group_user_path(@group), method: :post, class: "btn btn-sm btn-success" %></td>
                <% end %>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>